<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content" android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/restaurent_thumb"
            android:layout_width="170dp"
            android:layout_height="170dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/rating"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:maxLines="1"
            tools:text="rating"
            android:textSize="16dp"
            android:textColor="@android:color/white"
            android:background="@drawable/rounded_bg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/restaurent_thumb"
            app:layout_constraintBottom_toBottomOf="@+id/restaurent_thumb"
            app:layout_constraintEnd_toEndOf="@+id/restaurent_thumb" android:layout_marginEnd="8dp"
            app:layout_constraintVertical_bias="1.0" android:layout_marginBottom="8dp"/>

    <TextView
            android:maxLines="1"
            android:textColor="@color/grey"
            android:ellipsize="end"
            android:textStyle="bold"
            tools:text="restaurent name"
            android:textSize="18dp"
            android:id="@+id/restaurent_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/restaurent_thumb"
            app:layout_constraintStart_toStartOf="@+id/restaurent_thumb"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>

    <TextView
            android:maxLines="1"
            tools:text="cuisine"
            android:ellipsize="end"
            android:textSize="16dp"
            android:textColor="@color/blue_grey"
            android:id="@+id/cuisine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/restaurent_name"
            app:layout_constraintStart_toStartOf="@+id/restaurent_name"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>

    <TextView
            android:maxLines="1"
            android:id="@+id/address"
            android:ellipsize="end"
            tools:text="address"
            android:textColor="@color/blue_grey"
            android:textSize="14dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/cuisine"
            app:layout_constraintStart_toStartOf="@+id/cuisine" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>


</androidx.constraintlayout.widget.ConstraintLayout>